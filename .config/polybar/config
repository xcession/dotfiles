[module/date]
;https://github.com/polybar/polybar/wiki/Module:-date
;{{{

type = internal/date
interval = 1
date =
date-alt = %a %d %b, %Y

time = %H:%M:%S
time-alt = %H:%M:%S

format = <label>
format-padding = 2
format-prefix = " "

label = %date% %time%

;}}}

[module/eth]
;https://github.com/polybar/polybar/wiki/Module:-network
;{{{

type = internal/network
; Name of the network interface to display. You can get the names of the
; interfaces on your machine with `ip link`
interface = enp0s25
interval = 3.0

format-connected = <label-connected>
format-connected-padding = 2

label-connected =  %local_ip%

format-disconnected = <label-disconnected>
format-disconnected-padding = 2

label-disconnected =  down
label-disconnected-foreground = ${colors.foreground-alt}

;}}}

[module/filesystem]
;https://github.com/polybar/polybar/wiki/Module:-filesystem
;{{{

type = internal/fs

mount-0 = /
mount-1 = /home

interval = 30

fixed-values = true

format-mounted = <label-mounted>
format-mounted-padding = 2

format-unmounted = <label-unmounted>
format-unmounted-padding = 2

; label-mounted = %{F#2c78bf}%mountpoint%%{F-}: %free%
label-mounted = %mountpoint% (%free%)
; label-mounted = %free%

; label-unmounted = %mountpoint%
label-unmounted = %free%
label-unmounted-foreground = ${colors.foreground-alt}

;}}}

[module/i3]
;https://github.com/polybar/polybar/wiki/Module:-i3
;{{{

type = internal/i3

; Only show workspaces defined on the same output as the bar
pin-workspaces = true

index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-background = ${colors.primary}
label-mode-foreground = ${colors.background}
label-mode-padding = 2

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 2
label-focused-underline= ${colors.primary}

label-unfocused = %index%
label-unfocused-padding = 2

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}
label-visible-underline = ${self.label-focused-underline}

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

;}}}

