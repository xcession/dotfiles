screenchange-reload = true
compositing-background = over
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over

;: }}}

;: Colors {{{

; ARGB color (e.g. #f00, #ff992a, #ddff1023)

[colors]
background = #000000
background-alt = #1c1b19
foreground = #f7f8f7
foreground-alt = #918175
primary = #cdfd00
secondary = #2c78bf
alert = #ff5300
state_good = #519f50
state_degraded = #fbb829
state_bad = #ef2f27

;: }}}

;: Bar settings {{{

;https://github.com/polybar/polybar/wiki/Configuration#bar-settings

[bar/mainbar-i3]
;monitor = ${env:MONITOR:HDMI-1}
fixed-center = false
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%

background = ${colors.background}
foreground = ${colors.foreground}

radius = 0.0

; Under-/overline pixel size and argb color
; Individual values can be defined using:
;   {overline,underline}-size
;   {overline,underline}-color
line-size = 2
line-color = #000000

border-size = 0
border-color = ${colors.primary}

; Number of spaces to add at the beginning/end of the bar
; Individual side values can be defined using:
;   padding-{left,right}
padding = 0

; Number of spaces to add before/after each module
; Individual side values can be defined using:
;   module-margin-{left,right}
module-margin-left = 1

; font-N = <fontconfig pattern>;<vertical offset>
font-0 = "JetBrains Mono:style=Bold:pixelsize=9;2"
font-1 = "JetBrains Mono Nerd Font:style=Regular:pixelsize=8;1"
font-2 = "Noto Sans:style=Regular:pixelsize=8;1"

modules-left = i3 xwindow
modules-center = 
modules-right = filesystem memory cpu temperature wlan eth pulseaudio backlight-acpi battery xkeyboard date

; separator = |

; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
;   none
tray-position = right
tray-maxsize = 20
tray-background = ${colors.background}
tray-padding = 4
tray-scale = 1.0

cursor-click = 
cursor-scroll = 

;: }}}

;: Modules {{{

[module/alsa]
;https://github.com/polybar/polybar/wiki/Module:-alsa
type = internal/alsa

format-volume = <label-volume> <bar-volume>
format-muted = <label-muted>

label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}

label-muted =  muted
label-muted-foreground = ${colors.foreground-alt}
label-muted-background = ${colors.alert}
label-muted-padding = 1

bar-volume-width = 6
bar-volume-foreground-0 = ${colors.state_good}
bar-volume-foreground-1 = ${colors.state_good}
bar-volume-foreground-2 = ${colors.state_good}
bar-volume-foreground-3 = ${colors.state_good}
bar-volume-foreground-4 = ${colors.state_good}
bar-volume-foreground-5 = ${colors.state_degraded}
bar-volume-foreground-6 = ${colors.state_bad}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.background-alt}

[module/backlight-acpi]
;https://github.com/polybar/polybar/wiki/Module:-backlight
inherit = module/xbacklight
type = internal/backlight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = acpi_video0

[module/battery]
;https://github.com/polybar/polybar/wiki/Module:-battery
type = internal/battery

battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <animation-discharging> <label-discharging>
format-full = <ramp-capacity> <label-full>

format-charging-underline = ${colors.state_degraded}
format-discharging-underline = ${colors.state_degraded}
format-full-underline = ${colors.state_good}

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

label-charging-foreground = ${colors.state_degraded}
label-discharging-foreground = ${colors.state_degraded}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.state_good}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.state_degraded}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-foreground = ${colors.state_degraded}
animation-discharging-framerate = 750

