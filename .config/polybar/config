format-margin =
format-offset =

[module/alsa]
;https://github.com/polybar/polybar/wiki/Module:-alsa
;{{{

type = internal/alsa

format-volume = <label-volume> <bar-volume>
format-muted = <label-muted>

label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}

label-muted =  muted
label-muted-foreground = ${colors.background}
label-muted-background = ${colors.alert}
label-muted-padding = 1

bar-volume-width = 6
bar-volume-foreground-0 = ${colors.state_low}
bar-volume-foreground-1 = ${colors.state_low}
bar-volume-foreground-2 = ${colors.state_low}
bar-volume-foreground-3 = ${colors.state_low}
bar-volume-foreground-4 = ${colors.state_low}
bar-volume-foreground-5 = ${colors.state_mid}
bar-volume-foreground-6 = ${colors.state_hi}
bar-volume-gradient = false
bar-volume-indicator = █
bar-volume-indicator-font = 0
bar-volume-fill = ┄
bar-volume-fill-font = 0
bar-volume-empty = ┄
bar-volume-empty-font = 0
bar-volume-empty-foreground = ${colors.background-alt}

;}}}

[module/backlight]
;https://github.com/polybar/polybar/wiki/Module:-xbacklight
;{{{

inherit = module/xbacklight
type = internal/backlight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
; card = acpi_video0
card = intel_backlight

;}}}

[module/battery]
;https://github.com/polybar/polybar/wiki/Module:-battery
;{{{

type = internal/battery

battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-padding = 2
format-discharging = <animation-discharging> <label-discharging>
format-discharging-padding = 2
format-full = <ramp-capacity> <label-full>
format-full-padding = 2

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

label-charging-foreground = ${colors.state_mid}
label-discharging-foreground = ${colors.state_mid}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.state_low}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.state_mid}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-foreground = ${colors.state_mid}
animation-discharging-framerate = 750

;}}}

