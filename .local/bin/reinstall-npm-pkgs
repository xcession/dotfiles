#!/bin/bash

install_pkgs () {
  npm install --global \
    bash-language-server \
    intelephense \
    pnpm \
    pyright \
    sass \
    svgo \
    typescript \
    typescript-language-server \
    vim-language-server \
    vscode-langservers-extracted \
    yarn
}

while true
do
  read -r -p "Confirm installation? [(Y)es,(N)o] " confirmation

  case "$confirmation" in
    [yY][eE][sS]|[yY])
      printf 'Installing...'
      install_pkgs
      break
      ;;
    [nN][oO]|[nN])
      printf 'Exit...'
      break
      ;;
    *)
      printf 'Invalid input...'
      ;;
  esac
done
